{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "color": {
    "primary": {
      "$value": "#00ff41",
      "$type": "color",
      "$description": "Primary brand color for CTAs, links, and key brand moments"
    },
    "secondary": {
      "$value": "#ffb000",
      "$type": "color",
      "$description": "Secondary accent color for highlights"
    },
    "accent": {
      "$value": "#ff2a6d",
      "$type": "color",
      "$description": "Attention-grabbing accent for notifications"
    },
    "background": {
      "$value": "#0a0a0f",
      "$type": "color",
      "$description": "Main page background"
    },
    "surface": {
      "$value": "#111118",
      "$type": "color",
      "$description": "Card and elevated element background"
    },
    "text": {
      "default": {
        "$value": "#ffffff",
        "$type": "color",
        "$description": "Primary text color"
      },
      "secondary": {
        "$value": "#cccccc",
        "$type": "color",
        "$description": "Secondary text for descriptions"
      },
      "muted": {
        "$value": "#666666",
        "$type": "color",
        "$description": "Disabled and placeholder text"
      }
    },
    "semantic": {
      "success": {
        "$value": "#00d26a",
        "$type": "color",
        "$description": "Success states and confirmations"
      },
      "warning": {
        "$value": "#ffb000",
        "$type": "color",
        "$description": "Warnings and pending states"
      },
      "error": {
        "$value": "#ff4757",
        "$type": "color",
        "$description": "Errors and destructive actions"
      },
      "info": {
        "$value": "#3498db",
        "$type": "color",
        "$description": "Informational messages"
      }
    },
    "border": {
      "default": {
        "$value": "#333333",
        "$type": "color"
      },
      "subtle": {
        "$value": "#222222",
        "$type": "color"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "display": {
        "$value": "'Press Start 2P', monospace",
        "$type": "fontFamily",
        "$description": "Headlines and hero text"
      },
      "body": {
        "$value": "'Space Mono', monospace",
        "$type": "fontFamily",
        "$description": "Body text and UI"
      },
      "mono": {
        "$value": "'Fira Code', monospace",
        "$type": "fontFamily",
        "$description": "Code and technical content"
      }
    },
    "fontSize": {
      "xs": {
        "$value": "0.64rem",
        "$type": "dimension"
      },
      "sm": {
        "$value": "0.8rem",
        "$type": "dimension"
      },
      "base": {
        "$value": "1rem",
        "$type": "dimension"
      },
      "lg": {
        "$value": "1.25rem",
        "$type": "dimension"
      },
      "xl": {
        "$value": "1.563rem",
        "$type": "dimension"
      },
      "2xl": {
        "$value": "1.953rem",
        "$type": "dimension"
      },
      "3xl": {
        "$value": "2.441rem",
        "$type": "dimension"
      }
    },
    "fontWeight": {
      "light": {
        "$value": 300,
        "$type": "fontWeight"
      },
      "regular": {
        "$value": 400,
        "$type": "fontWeight"
      },
      "medium": {
        "$value": 500,
        "$type": "fontWeight"
      },
      "semibold": {
        "$value": 600,
        "$type": "fontWeight"
      },
      "bold": {
        "$value": 700,
        "$type": "fontWeight"
      }
    },
    "lineHeight": {
      "none": {
        "$value": 1,
        "$type": "number"
      },
      "tight": {
        "$value": 1.2,
        "$type": "number"
      },
      "normal": {
        "$value": 1.5,
        "$type": "number"
      },
      "relaxed": {
        "$value": 1.75,
        "$type": "number"
      }
    }
  },
  "spacing": {
    "xs": {
      "$value": "0.25rem",
      "$type": "dimension",
      "$description": "4px - Smallest spacing unit"
    },
    "sm": {
      "$value": "0.5rem",
      "$type": "dimension",
      "$description": "8px - Small gaps"
    },
    "md": {
      "$value": "1rem",
      "$type": "dimension",
      "$description": "16px - Standard spacing"
    },
    "lg": {
      "$value": "1.5rem",
      "$type": "dimension",
      "$description": "24px - Large gaps"
    },
    "xl": {
      "$value": "2rem",
      "$type": "dimension",
      "$description": "32px - Section spacing"
    },
    "2xl": {
      "$value": "3rem",
      "$type": "dimension",
      "$description": "48px - Major sections"
    }
  },
  "borderRadius": {
    "sm": {
      "$value": "0.25rem",
      "$type": "dimension"
    },
    "md": {
      "$value": "0.5rem",
      "$type": "dimension"
    },
    "lg": {
      "$value": "1rem",
      "$type": "dimension"
    },
    "full": {
      "$value": "9999px",
      "$type": "dimension"
    }
  },
  "shadow": {
    "sm": {
      "$value": "0 1px 2px rgba(0, 0, 0, 0.3)",
      "$type": "shadow"
    },
    "md": {
      "$value": "0 4px 6px rgba(0, 0, 0, 0.3)",
      "$type": "shadow"
    },
    "lg": {
      "$value": "0 10px 15px rgba(0, 0, 0, 0.3)",
      "$type": "shadow"
    }
  },
  "duration": {
    "fast": {
      "$value": "150ms",
      "$type": "duration"
    },
    "normal": {
      "$value": "300ms",
      "$type": "duration"
    },
    "slow": {
      "$value": "500ms",
      "$type": "duration"
    }
  }
}
